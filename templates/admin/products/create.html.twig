{% extends 'base.html.twig' %}
{% block title %}
    Добавить товар
{% endblock %}
{% block body %}
    <div class="card col-lg-10 mx-auto">
        <div class="card-header">
            <h5 class="text-center">Добавить товар</h5>
        </div>
        <form action="{{ path('app_admin_products_store') }}" method="POST" enctype="multipart/form-data">
            <div class="card-body">
                {% set form_settings = {file_required: false} %}
                {% include 'admin/products/form.html.twig' %}
            </div>
            <div class="card-footer text-end">
                <button class="btn btn-danger ml-auto">Добавить</button>
            </div>
        </form>
    </div>
{% endblock %}