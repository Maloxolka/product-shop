{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="card col-lg-4 mx-auto">
        <div class="card-header">
            <h1 class="text-center">Вход</h1>
        </div>
        <div class="card-body">
            {% if error %}
                <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form method="POST" action="{{ path('login') }}">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" type="email" name="_username" required>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input id="password" class="form-control" name="_password" type="password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-danger mt-2">Войти</button>
            </form>
        </div>
    </div>
{% endblock %}
