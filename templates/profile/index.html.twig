{% extends 'base.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}
    <div class="card col-lg-4 mx-auto">
        <div class="card-header">
            <h1 class="text-center">Личный кабинет</h1>
        </div>
        <div class="card-body">
            <h5>Информация о пользователе</h5>
            <form method="POST" action="{{ path('app_profile_ajax_update') }}">
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input id="email" class="form-control" type="email" name="email" required value="{{ user.email }}">
                </div>
                <div class="form-group">
                    <label for="password">Имя</label>
                    <input id="name" class="form-control" name="name" value="{{ user.name }}">
                </div>
                <div class="form-group">
                    <label for="password">Фамилия</label>
                    <input id="surname" class="form-control" name="surname" value="{{ user.surname }}">
                </div>
                <button class="btn btn-danger mt-2">Сохранить</button>
            </form>
            <hr/>
            <h5>Статистика</h5>
            <div class="row">
                <div class="col-lg-6">
                    <label>Всего заказов:</label>
                    {{ user.statistics.order_count }}
                </div>
                <div class="col-lg-6">
                    <label>Всего потрачено:</label>
                    {{ user.statistics.order_sum.formatted }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
